extends ../layout/index

block contenido
  .py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Bienes 
        span.font-normal Raices
    h2.text-2xl.font-extrabold.text-center= page
    .mt-8.mx-auto.max-w-md.items-center
        .bg-white.py-8.px-4.shadow
            form.space-y-5
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="name") Tu nombre 
                    input#name.w-full.px-3.py-3.border.border-blue-700.rounded-md.placeholder-gray-500(placeholder="Ingresa tu nombre" type="text" name="name")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de registro
                    input#email.w-full.px-3.py-3.border.border-blue-700.rounded-md.placeholder-gray-500(placeholder="Ingresa tu email" type="email" name="email")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contrase単a
                    input#password.w-full.px-3.py-3.border.border-blue-700.rounded-md.placeholder-gray-500(placeholder="Ingresa tu contrase単a" type="password" name="password")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="r_password") Repetir Contrase単a
                    input#r_password.w-full.px-3.py-3.border.border-blue-700.rounded-md.placeholder-gray-500(placeholder="Repite tu contrase単a" type="password" name="r_password")
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")