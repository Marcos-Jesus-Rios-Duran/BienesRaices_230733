extends ../layout/index

block contenido 
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-light_blue Bienes
            span.font-normal.text-pink Raices
        h2.text-center.font-extrabold.text-2xl.text-black= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.p-2.mb-1.font-bold= error.msg

        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/newUser" novalidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div     
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Nombre Completo: 
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder.gray-400(type="text" placeholder="Ingresa tu nombre con apellidos" name="nombre_usuario" value= user? user.name:'')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Correo Electrónico: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder.gray-400(type="email" placeholder="ej: usuario@dominio.com" name="correo_usuario" value= user?user.email:'')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Contraseña: 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder.gray-400(type="password" placeholder="mínimo de 8 carácteres" name="pass_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Confirmación Contraseña: 
                        input#password-confirm.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder.gray-400(type="password" placeholder="mínimo de 8 carácteres, igual a la anterior" name="pass2_usuario")

                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-red-600") Olvide mi contraseña... 

                    input(class="w-full bg-light_blue hover:bg-greenish text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")



