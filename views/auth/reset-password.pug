extends ../layout/index

block contenido
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-light_blue Bienes
            span.font-normal.text-pink Raices
        h2.text-center.font-extrabold.text-2xl.text-black= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-black.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/passwordRecovery/:token" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="new_password") Ingresa tu nueva contraseña:
                        input#new_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="mínimo de 8 carácteres" type="password" name="new_password") 
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold (for="pass2_usuario") Confirmación Contraseña: 
                        input#password-confirm.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder.gray-400(type="password" placeholder="mínimo de 8 carácteres, igual a la anterior" name="pass2_usuario")
                        
                    input(class="w-full bg-light_blue hover:bg-greenish text-white font-bold py-3 cursor-pointer" type="submit" value="Actualizar Contraseña")
