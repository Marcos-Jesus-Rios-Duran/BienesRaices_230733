extends ../layout/index

block contenido
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-light_blue Bienes
            span.font-normal.text-pink Raices
        h2.text-center.font-extrabold.text-2xl.text-black= page
         if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form(method="POST" action='/auth/newUser' noValidate).space-y-5.px-6
                    div 
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Nombre completo:
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="text"  placeholder="Ej. Marcos Jesus Rios Duran" name="nombre_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Correo electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email"  placeholder="Ej: marcos@gmail.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password"  placeholder="Mínimo de 8 carácteres" name="pass_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Confirmación contraseña:
                        input#passsword-confirm.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password"  placeholder="Mínimo de 8 carácteres" name="pass2_usuario")

                    div.flex.items-center.justify-between
                        a.text-light_blue.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-red-500") ¿Ya tienes cuenta? Inicia sesión
                        a.text-light_blue.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-red-500") Olvidé mi contraseña
                    
                    input(class="w-full bg-light_blue hover:bg-greenish text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
