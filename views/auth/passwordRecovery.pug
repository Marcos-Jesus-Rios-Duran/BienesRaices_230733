extends ../layout/index

block contenido
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-light_blue Bienes
            span.font-normal.text-pink Raices
        h2.text-center.font-extrabold.text-2xl.text-black= page

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5.px-6
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Correo electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email"  placeholder="Ej: marcos@gmail.com" name="correo_usuario")

                    div.flex.items-center.justify-between
                        a.text-light_blue.text-xs(href="/auth/createAccount" class="hover:underline decoration-2 hover:decoration-red-500") ¿Aún no tienes cuenta? Regístrate
                        a.text-light_blue.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-red-500") Inicia sesión
                    
                    input(class="w-full bg-light_blue hover:bg-greenish text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar contraseña")
